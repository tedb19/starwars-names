{
  "name": "starwars-names-egghead",
  "version": "0.0.0-development",
  "description": "Get random starwars names",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "mocha src/*.test.js -w",
    "test:single": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- -R spec src/*",
    "test:travis": "istanbul cover -x *.test.js _mocha -- -R spec src/index.test.js",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tedb19/starwars-names.git"
  },
  "keywords": [
    "random",
    "star",
    "wars"
  ],
  "author": "Teddy Odhiambo <tedb19@gmail.com> (http://atlas-tech.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tedb19/starwars-names/issues"
  },
  "homepage": "https://github.com/tedb19/starwars-names#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "ghooks": "2.0.2",
    "istanbul": "0.4.5",
    "mocha": "4.1.0",
    "semantic-release": "^11.0.2",
    "travis-deploy-once": "^4.3.0"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
